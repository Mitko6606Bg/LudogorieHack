@model BusinessContactsPlatform.Data.Entities.Event

<h2>Event Details</h2>

<div>
    <h4>Title: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDateTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDateTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Online Link</dt>
        <dd class="col-sm-10"><a href="@Model.OnlineLink">@Model.OnlineLink</a></dd>


        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
    <div>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new { id = Model.Id })'">Edit</button>
        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index")'">Back to List</button>
    </div>

</div>

<h3>Users Attending</h3>
<ul>
    @foreach (var eventUser in Model.EventUsers)
    {
        <li>@eventUser.User.UserName</li>
    }
</ul>