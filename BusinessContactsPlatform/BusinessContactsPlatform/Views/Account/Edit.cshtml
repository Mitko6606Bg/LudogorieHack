@using BusinessContactsPlatform.ViewModels
@model AccountViewModel

<div class="container mt-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="card-title">Edit Profile</h2>
            <hr>
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MiddleName" class="control-label"></label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Graduated" class="control-label"></label>
                            <input asp-for="Graduated" class="form-control" />
                            <span asp-validation-for="Graduated" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Work" class="control-label"></label>
                            <input asp-for="Work" class="form-control" />
                            <span asp-validation-for="Work" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Experience" class="control-label"></label>
                            <input asp-for="Experience" class="form-control" />
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="helpINeed" class="control-label"></label>
                            <input asp-for="helpINeed" class="form-control" />
                            <span asp-validation-for="helpINeed" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="helpIOffere" class="control-label"></label>
                            <input asp-for="helpIOffere" class="form-control" />
                            <span asp-validation-for="helpIOffere" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <h3>Social Media</h3>
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">LinkedIn</label>
                            <input asp-for="LinkedInNames" class="form-control" placeholder="Names" />
                            <input asp-for="LinkedInUsername" class="form-control mb-2" placeholder="Username" />
                            <input asp-for="LinkedInLink" class="form-control" placeholder="Link" />
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Instagram</label>
                            <input asp-for="InstagramNames" class="form-control" placeholder="Names" />
                            <input asp-for="InstagramUsername" class="form-control mb-2" placeholder="Username" />
                            <input asp-for="InstagramLink" class="form-control" placeholder="Link" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Facebook</label>
                            <input asp-for="FacebookNames" class="form-control" placeholder="Names" />
                            <input asp-for="FacebookUsername" class="form-control mb-2" placeholder="Username" />
                            <input asp-for="FacebookLink" class="form-control" placeholder="Link" />
                        </div>
                    </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
